<div data-controller="nav">
  <div class="nav-container flex justify-between items-center shadow  px-4 md:px-8 py-6 sticky top-0 bg-white" data-nav-target="navContainer">
    <div class="logo font-bold text-2xl md:text-3xl">
      <%= link_to t("SHOP"), root_path %>
    </div>
    <div class="links hidden md:block">
        <% if user_signed_in? %>
              <%= link_to t("navigation.log_out"), destroy_user_session_path, method: :delete, class: "md:ml-2 bg-red-500 rounded text-white p-1 md:p-3 font-semibold" %>
              <%= link_to t(current_user.username), edit_user_registration_path, class: "md:ml-2 bg-blue-500 rounded text-white p-1 md:p-3 font-semibold"  %>
            <% else %>
              <%= link_to "Sign In", new_user_session_path, class:"navbar-item button is-warning" %>
              <%= link_to "Sign up", new_user_registration_path, class: "md:ml-2 bg-red-500 rounded text-white p-1 md:p-3 font-semibold"%>
            <% end %>

    </div>
    <div class="nav-toggler block md:hidden" data-target="toggler" data-action="click->nav#toggleMenu">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </div>
  </div>

  <div class="mobile-nav-container hidden shadow px-4 md:px-8 py-6" data-nav-target="mobileNavContainer">
    <div class="links flex flex-col justify-center">
      <%= link_to t("navigation.all_jobs"), root_path, class: "mb-2" %>
      <a href="" class="mb-2"><%= t("navigation.community") %></a>
      <a href="" class="text-red-500 underline mb-2 font-semibold"><%= t("navigation.get_in_touch") %></a>
    </div>
  </div>
</div>